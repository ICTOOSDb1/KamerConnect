<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KamerConnect.View.MAUI.LoginPage">
 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Left side -->
            <ColumnDefinition Width="*" /> <!-- Right side -->
        </Grid.ColumnDefinitions>

        <!-- Background Colors -->
        <BoxView Grid.Column="0" BackgroundColor="White" />
        <BoxView Grid.Column="1" BackgroundColor="Red" />

        <!-- Left side: Form -->
        <StackLayout Grid.Column="0" Padding="250, 0" Spacing="10">
            <Label Text="Welcome" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />
            <Entry Placeholder="Enter your name" />
            <Entry Placeholder="Enter your email" Keyboard="Email" />
            <Button Text="Submit" />
        </StackLayout>

        <!-- Right side: Image -->
        <Image Grid.Column="1" 
               Source="your_image.png" 
               Aspect="AspectFill" 
               VerticalOptions="FillAndExpand" 
               HorizontalOptions="FillAndExpand" />
    </Grid>
    


</ContentPage>