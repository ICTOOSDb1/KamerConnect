<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="using:KamerConnect.View.MAUI.Components"
             xmlns:models="clr-namespace:KamerConnect.Models;assembly=KamerConnect"
             x:Class="KamerConnect.View.MAUI.PersonalInformationForm">
    <Grid RowSpacing="20">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>



        <Grid ColumnSpacing="20"
                Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0">
                <components:Entry x:Name="firstNameEntry"
                                  LabelText="Voornaam*"
                                  IsRequired="True"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <components:Entry x:Name="middleNameEntry"
                                  LabelText="Tussenvoegsel"
                                  IsRequired="False"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2">
                <components:Entry x:Name="surnameEntry"
                                  LabelText="Achternaam*"
                                  IsRequired="True"/>
            </VerticalStackLayout>
        </Grid>

        <Grid ColumnSpacing="20"
              Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0"
                                 Spacing="10">
                <components:Entry x:Name="emailEntry"
                                  InputType="Email"
                                  LabelText="E-mail*"
                                  Keyboard="Email"
                                  IsRequired="True"/>

                <components:Entry x:Name="passwordEntry"
                                  InputType="Password"
                                  LabelText="Wachtwoord"
                                  IsRequired="True"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                                 Spacing="10">
                <components:Entry x:Name="phoneNumberEntry"
                                  InputType="PhoneNumber"
                                  LabelText="Telefoonnummer"
                                  Keyboard="Telephone"
                                  IsRequired="False"/>

                <components:Entry x:Name="confirmPasswordEntry"
                                  InputType="ConfirmPassword"
                                  LabelText="Wachtwoord bevestigen*"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Grid.Row="3">
            <components:Entry x:Name="birthDateEntry"
                              InputType="Date"
                              LabelText="Geboortedatum*"
                              Placeholder="dd/mm/jjjj"
                              Keyboard="Numeric"/>
        </VerticalStackLayout>

        <StackLayout Spacing="10"
                     Grid.Row="4">
            <components:EnumPicker
                x:Name="genderPicker"
                Title="Geslacht*"
                EnumType="{x:Type models:PickerOptions+DutchGender}"/>

        </StackLayout>
    </Grid>
</ContentView>