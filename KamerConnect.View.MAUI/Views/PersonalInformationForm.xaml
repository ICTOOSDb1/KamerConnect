<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="using:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.PersonalInformationForm">
    <StackLayout Spacing="15">

        <Label Text="Persoonlijke gegevens"
               FontSize="18"
               FontAttributes="Bold"/>


        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0">
                <components:Entry x:Name="firstNameEntry"
                                  LabelText="Voornaam*"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <components:Entry x:Name="middleNameEntry"
                                  LabelText="Tussenvoegsel"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2">
                <components:Entry x:Name="surnameEntry"
                                  LabelText="Achternaam*"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Additional Fields -->
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0">
                <components:Entry x:Name="emailEntry"
                                  LabelText="E-mail*"
                                  Keyboard="Email"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <components:Entry x:Name="phoneNumberEntry"
                                  LabelText="Telefoonnummer"
                                  Keyboard="Telephone"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout>
            <components:Entry x:Name="birthDateEntry"
                              LabelText="Geboortedatum*"
                              Placeholder="dd/mm/jjjj"
                              Keyboard="Numeric"/>
        </VerticalStackLayout>

        <StackLayout Spacing="10">
            <Label Text="Geslacht*"
                   FontSize="14"
                   FontAttributes="Bold"/>
            <RadioButton Content="Man"
                         GroupName="GenderGroup"
                         x:Name="maleRadioButton"/>
            <RadioButton Content="Vrouw"
                         GroupName="GenderGroup"
                         x:Name="femaleRadioButton"/>
            <RadioButton Content="Anders"
                         GroupName="GenderGroup"
                         x:Name="otherRadioButton"/>
        </StackLayout>
    </StackLayout>
</ContentView>