<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Components="clr-namespace:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.Views.InterestsForm">
    <ScrollView>
		
			<Grid RowSpacing="10">
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				
				<Components:Entry Grid.Row="0" InputType="Text" LabelText="School" Text="{Binding School, Mode=TwoWay}" x:Name = "schoolEntry"/>
                <Components:Entry Grid.Row="1" InputType="Text" LabelText="Studie" Text="{Binding Study, Mode=TwoWay}" x:Name = "studyEntry"/>
                <Components:Entry Grid.Row="2" LabelText="Omschrijving van jezelf" Text="{Binding Description, Mode=TwoWay}" x:Name = "descriptionEntry"/>

				

			</Grid>
		
	</ScrollView>
</ContentView>
