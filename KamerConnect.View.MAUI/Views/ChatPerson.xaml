<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KamerConnect.View.MAUI.Views.HouseCard"
             xmlns:Utils="clr-namespace:KamerConnect.View.MAUI.Utils"
             BackgroundColor="{StaticResource BackgroundColor}">
    <Frame 
        CornerRadius="10"
        HeightRequest="400"
        HorizontalOptions="FillAndExpand"
        BorderColor="Transparent"
        BackgroundColor="#F8F8F8"
        Padding="0">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnChatTapped"/>
        </Frame.GestureRecognizers>
        <HorizontalStackLayout Padding="5" Spacing="5">
            <Image x:Name="ProfileImage"
                   Image.Source="{Binding ProfilePicture}"
                   Aspect="AspectFill"
                   HeightRequest="300"
                   HorizontalOptions="FillAndExpand"/>
            
            <Label Text="{Binding PersonName}"
                   FontSize="Large"
                   TextColor="Black"></Label>
        </HorizontalStackLayout>
    </Frame>
</ContentView>