<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Components="clr-namespace:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.RegisterHomePreferencesForm">

    
        <Components:FormCard Style="{StaticResource ContainerFrameStyle}">
            <Grid RowSpacing="10" ColumnSpacing="10" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="575" />
                </Grid.ColumnDefinitions>

                <Label Text="Wat zoekt u in een woning?" 
                       FontSize="18" 
                       FontAttributes="Bold"></Label>

                <Components:Entry LabelText="Beschikbaar budget" 
                                  x:Name="BudgetInput"
                                  Placeholder="Budget in €" 
                                  Grid.Row="1" 
                                  Grid.Column="0" 
                                 />
                <Components:Entry LabelText="Oppervlak in vierkante meter"
                                  x:Name="AreaInput"
                                  Placeholder="m²" 
                                  Grid.Row="2" 
                                  Grid.Column="0" />
               

            <Picker x:Name="HousetypePicker"
                    Title="Type woning"
                    SelectedIndex="0"
                    TextColor="Black"
                    BackgroundColor="#F0F0F0"
                    Margin="0,5,0,10"
                    HeightRequest="80"
                    Grid.Row="3"
                    Grid.Column="0"
                    SelectedIndexChanged="HouseTypeChanged"
                    
                    >
                
                <Picker.Items>
                    <x:String>Geen voorkeur</x:String>
                    <x:String>Huis</x:String>
                    <x:String>Appartement</x:String>
                    <x:String>Studio</x:String>

                </Picker.Items>


            </Picker>
            <Components:Entry LabelText="Hoeveelheid kamergenoten"
                   x:Name="ResidentsInput"
                   
                   Grid.Row="4" 
                   Grid.Column="0" />


        </Grid>
        </Components:FormCard>
    
</ContentView>
