<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Components="clr-namespace:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.Views.UpdateAccountsForm">
    <ScrollView>
		<Components:FormCard Style="{StaticResource ContainerFrameStyle}">
			<VerticalStackLayout Padding="10">

                <Border WidthRequest="100"
		                HeightRequest="100"
		                Stroke="Black"
		                StrokeThickness="1"
		                StrokeShape="RoundRectangle 50">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Image_tapped"/>
                    </Border.GestureRecognizers>
                    <Image Source="{Binding ProfilePicturePath}"
		                   x:Name="profile_picture"
		                   WidthRequest="98"
		                   HeightRequest="98" 
		                   Aspect="AspectFill" />
                </Border>

                <Components:Entry LabelText="Voornaam" DefaultText="{Binding FirstName}" x:Name = "firstNameEntry"/>
                <Grid ColumnDefinitions="*,3*">
                    <Components:Entry LabelText="Tussenvoegsel" Grid.Column="0"  DefaultText="{Binding MiddleName}" x:Name = "middleNameEntry"/>
                    <Components:Entry LabelText="Achternaam" Grid.Column="1"  DefaultText="{Binding Surname}" x:Name = "surNameEntry"/>
				</Grid>

                <Components:Entry LabelText="Email" DefaultText="{Binding Email}" x:Name = "emailEntry"/>
                <Components:Entry LabelText="Telefoonnummer" DefaultText="{Binding PhoneNumber}" x:Name = "phoneNumberEntry"/>
                
				<Button HorizontalOptions="End" Text="Update account" Style="{StaticResource PrimaryButton}" Clicked="Button_Update_Account" Command="{Binding UpdateAccountCommand}"/>

			</VerticalStackLayout>
		</Components:FormCard>
	</ScrollView>
</ContentView>
