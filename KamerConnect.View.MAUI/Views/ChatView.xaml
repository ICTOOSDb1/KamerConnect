<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KamerConnect.View.MAUI.Views.ChatView">
    <VerticalStackLayout>
        <ScrollView>
            <StackLayout>
                <ListView x:Name="MessageListView" ItemsSource="{Binding SelectedChat.messages}" 
                          HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding Message}" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>

        <HorizontalStackLayout Padding="10">
            <Entry x:Name="MessageEntry" Placeholder="Type a message" />
            <Button Text="Send" Clicked="OnSendMessageClicked" />
            <Label TextColor="Wheat" x:Name="testLabel"   ></Label>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentView>