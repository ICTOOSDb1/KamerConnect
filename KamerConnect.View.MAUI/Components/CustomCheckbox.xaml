<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.Components.CustomCheckbox">
    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
        <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, Source={RelativeSource AncestorType={x:Type local:CustomCheckbox}}}" />
        <Label Text="{Binding LabelText, Source={RelativeSource AncestorType={x:Type local:CustomCheckbox}}}"
               VerticalOptions="Center"
               Margin="5,0,0,0" />
    </StackLayout>
</ContentView>