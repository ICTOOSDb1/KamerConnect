<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:reusableItems="clr-namespace:KamerConnect.View.MAUI.reusableItems"
             x:Class="KamerConnect.View.MAUI.reusableItems.MultiSelectComboBox">
    <ContentView.Content>
        <VerticalStackLayout>
            <!-- Display Selected Items -->
            <Frame Padding="10" BorderColor="Gray" CornerRadius="5">
                <Label Text="{Binding Source={x:Reference MultiSelect}, Path=SelectedItemsDisplay}"
                       VerticalTextAlignment="Center"
                       TextColor="Black" />
            </Frame>

            <!-- Dropdown for Selecting Items -->
            <CollectionView x:Name="Dropdown"
                            ItemsSource="{Binding Items}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <reusableItems:CustomCheckbox LabelText="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>