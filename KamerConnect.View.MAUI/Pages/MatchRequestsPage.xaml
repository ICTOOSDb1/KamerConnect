<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:KamerConnect.View.MAUI.Views"
             x:Class="KamerConnect.View.MAUI.Pages.MatchRequestsPage"

    BackgroundColor="#E5ECEF">
    <ContentPage.Content>
        <StackLayout Height="300" Width="1100">
            <ContentView x:Name="NavbarContainer"/>
            <Label Text="Matchverzoeken"
                   TextColor="Black"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   FontFamily="Inter-Regular"
                   FontSize="36"
                   FontAttributes="Bold"/>
            <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
            <ContentView x:Name="MatchView"  WidthRequest="1100" HeightRequest="600"/>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>