<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:KamerConnect.View.MAUI.Views"
             x:Class="KamerConnect.View.MAUI.Pages.MatchRequestsPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <ContentView x:Name="NavbarContainer"
                         Grid.Row="0"/>

            <StackLayout Grid.Row="1" Height="300" Width="1100">
                <Label Text="Matchverzoeken"
                       FontSize="32"
                       FontFamily="InterLight"
                       HorizontalOptions="Start"
                       VerticalOptions="End"
                       TextColor="Black"/>
                <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
                    <ContentView x:Name="MatchView" WidthRequest="1100" HeightRequest="700"/>
                </ScrollView>
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>