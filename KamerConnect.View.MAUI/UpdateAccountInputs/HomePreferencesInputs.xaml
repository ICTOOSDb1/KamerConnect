<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Components="clr-namespace:KamerConnect.View.MAUI.Components"
             x:Class="KamerConnect.View.MAUI.UpdateAccountInputs.HomePreferencesInputs">

    <ScrollView>
        <Components:FormCard Style="{StaticResource ContainerFrameStyle}">
            <VerticalStackLayout Padding="10">
                
                <Components:Entry LabelText="Aantal vierkante meter" Placeholder="VierkanteMeter" />
                <Components:Entry LabelText="Aantal slaapkamers" Placeholder="Bedrooms" />
                <Components:Entry LabelText="Woningtype" Placeholder="Woningtype" />

                <Button HorizontalOptions="End" Text="Update account" Style="{StaticResource PrimaryButton}" Clicked="Button_Clicked"/>

            </VerticalStackLayout>
        </Components:FormCard>
    </ScrollView>
</ContentView>
