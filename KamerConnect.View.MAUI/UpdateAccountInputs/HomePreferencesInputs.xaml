<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KamerConnect.View.MAUI.UpdateAccountInputs.HomePreferencesInputs">
    <VerticalStackLayout Padding="10">
        <Label Text="Aantal vierkante meter:" TextColor="Black" FontSize="10" WidthRequest="200" HeightRequest="30"/>
        <Entry x:Name="squareMeters"
           Placeholder="Aantal vierkante meter"
           TextColor="Black"
           Keyboard="Numeric"
           WidthRequest="200"
           HeightRequest="40" />

        <Label Text="Slaapkamers:" TextColor="Black" FontSize="10" WidthRequest="200" HeightRequest="30"/>
        <Entry x:Name="bedrooms"
           Placeholder="Slaapkamers"
           TextColor="Black"
           Keyboard="Numeric"
           WidthRequest="200"
           HeightRequest="40" />

        <Label Text="Woningtype:" TextColor="Black" FontSize="10" WidthRequest="200" HeightRequest="30"/>
        <Entry x:Name="housingType"
           Placeholder="Woningtype"
           TextColor="Black"
           WidthRequest="200"
           HeightRequest="40" />

        <Button Text="Update Account"
                    Clicked="Button_Clicked"
                    TextColor="Black"
                    HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentView>
